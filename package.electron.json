{
  "name": "tacom-equipamentos-desktop",
  "version": "1.0.0",
  "description": "Sistema de Controle de Equipamentos TACOM - Versão Desktop",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "vite build",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "pack": "electron-builder --dir",
    "prepack": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.tacom.equipamentos",
    "productName": "TACOM Controle de Equipamentos",
    "copyright": "Copyright © 2024 TACOM Projetos",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "electron/database.js",
        "to": "electron/database.js"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "TACOM-Equipamentos-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "displayLanguageSelector": false,
      "language": "Portuguese",
      "runAfterFinish": true,
      "artifactName": "TACOM-Equipamentos-Installer-${version}.${ext}"
    },
    "portable": {
      "artifactName": "TACOM-Equipamentos-Portable-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Office"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "electron": "^37.2.5"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1"
  }
}